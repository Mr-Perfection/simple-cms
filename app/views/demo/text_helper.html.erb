<%text = "Stephen Sungsoo Lee \n Call me! \n" %>
<h2>word_wrap</h2>
<%= word_wrap(text,:line_width => 30)%>
<hr/>
<h2>simple_format</h2>
<%= simple_format(text)%>
<br/>
<h2>simple_format + word_wrap</h2>
<%= simple_format(word_wrap(text, :line_width => 30))%>
<hr/>
<h2>truncate</h2>
<%= truncate(text, :length => 20, :omission => ".....")%>
<hr/>
<h2>excerpt</h2>
<%= excerpt(text, 'Lee', :radius => 3, :omission => "..O.O." )%>
<hr/>
<h2>highlight</h2>
<%= highlight(text, 'Stephen')%>
<br/>
<%= highlight(text, ['Lee','Sungsoo'],:highlighter => '<em>\1</em>')%>
<hr/>
<h2>pluralize</h2>
<% [2,1,20].each do |n|%>
<%= pluralize(n, 'product') %>
<%= pluralize(n, 'octopus') %>
<%= pluralize(n, 'snipi', 'snipus') %>
<% end %>
<hr/>

<h2>cycle</h2>
<%5.times do%>
	<%= cycle('red','yellow','black') %>
	<br/>
<%end%>