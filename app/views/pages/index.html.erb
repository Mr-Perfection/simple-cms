<%= link_to("<< Back To Subjects", {:controller => 'subjects', :id => params[:subject_id]}, :class => 'back-link') %>



<div class = "pages index">
<h2>Pages</h2>
 <%=  link_to(image_tag('example.jpg', :size => '11x11', :alt=> 'opps!') + "Add New Page",{:action => 'new', :subject_id => @subject.id}, :class => 'action new') %>

<div><%= pluralize(@pages.size, 'page')%> found!</div>

	<table class="listing" summary="Page list">
		<tr class = "header">
			<th>&nbsp;</th>
			<th></th>
			<th>Subject</th>
			<th>Page</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Actions</th>
			
		</tr>

		<%@pages.each do |page|%>
			<tr class="<%= cycle('odd','even')%>">
				<th>&nbsp;</th>
				<td><%= page.position%></td>
				<td><%= page.subject.name if page.subject%></td>
				<td><%= page.name%></td>
				<td><%= page.permalink%></td>
				<td class="center"><%=status_tag(page.visible)%>	
				</td>
				<td class="actions">
				<%= link_to("View Sections",{:controller => 'sections', :page_id => page.id}, :class => 'action show')%>
				<%= link_to("Show",{:action => 'show', :id => page.id}, :class => 'action show')%>
				<%= link_to("Edit",{:action => 'edit', :id => page.id}, :class => 'action edit')%>
				<%= link_to("Delete",{:action => 'delete', :id => page.id}, :class => 'action delete')%>
				</td>
			</tr>
		<%end%>
	</table>
</div>
