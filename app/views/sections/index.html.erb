
<%= link_to("<< Back To Pages", {:controller => 'pages', :subject_id => @page.subject_id, :id => @page.id}, :class => 'back-link') %>


<%@page_title = "Sections"%>
<div class = "sections index">
<h2>Sections</h2>
 <%= link_to("Add New Section",{:action => 'new', :page_id => @page.id}, :class => 'action new') %>

<div><%= pluralize(@sections.size, 'section')%> found!</div>

	<table class="listing" summary="Section list">
		<tr class = "header">
			<th>&nbsp;</th>
			<th>Page ID</th>
			<th>Section</th>
			<th>Position</th>
			<th>Visible</th>
			<th>Section_Edits</th>
			<th>Editors</th>
			<th>Actions</th>
		</tr>

		<%@sections.each do |section|%>
			<tr class="<%=cycle('odd','even')%>">
				<th>&nbsp;</th>
				<td><%= section.page_id%></td>
				<td><%= section.name%></td>
				<td><%= section.position%></td>
				<td class="center"><%= status_tag(section.visible)%>
					
				</td>
				<td class="center"><%= section.section_edits.size %></td>
				<td class="center"><%= section.editors.size %></td>
				<td class="actions">
				<%= link_to("Show",{:action => 'show', :id => section.id}, :class => 'action show')%>
				<%= link_to("Edit",{:action => 'edit', :id => section.id}, :class => 'action edit')%>
				<%= link_to("Delete",{:action => 'delete', :id => section.id}, :class => 'action delete')%>
				</td>
			</tr>
		<%end%>
	</table>
</div>
